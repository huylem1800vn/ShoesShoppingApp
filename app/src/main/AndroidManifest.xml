<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ltdd.shoesshoppingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.ltdd.shoesshoppingapp.localdata.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LTDD_CS92_Nhom6_ShoesShoppingApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.ltdd.shoesshoppingapp.ui.login.RegisterActivity"
            android:exported="false" />
        <activity
            android:name="com.ltdd.shoesshoppingapp.ui.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.ltdd.shoesshoppingapp.MainActivity"
            android:hardwareAccelerated="false"
            android:exported="false" />
        <activity
            android:name="com.ltdd.shoesshoppingapp.ui.splash_sreen.SplashScreenActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>